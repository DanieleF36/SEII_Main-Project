{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Thesis Request",
    "description": "JSON Schema for Thesis request data structures",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "supervisor": { 
          "type": "integer"
        },
        "cosupervisors": {
          "type": "array",
          "items": { "type": "string", "minLength": 0 }
        },
        "description": { 
            "type": "string",
            "minLength": 1
        }
    },
    "required": ["supervisor", "cosupervisors","description"]
}