{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Thesis",
    "description": "JSON Schema for Thesis data structures",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "title": { 
            "type": "string", 
            "minLength": 1 
        },
        "supervisor": { 
            "type": "string", 
            "minLength": 1
        },
        "cosupervisor": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "keywords": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "type": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "groups": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "description": { 
            "type": "string",
            "minLength": 1
        },
        "knowledge": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "note": {
            "type": "string",
            "minLength": 1
        },
        "expiration_date": { 
            "type": "string", 
            "format": "date",
            "minLength": 1 
        },
        "level": {
          "enum": ["Master","Bachelor"]
        },
        "cds": { 
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
        },
        "status": { 
            "description": "0: archived, 1: published",
            "enum": [0,1],
            "default": 1
         }
    },
    "required": ["title", "cosupervisor","keywords","type","groups","cds","knowledge", "expiration_date", "level"]
}